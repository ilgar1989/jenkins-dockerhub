pipeline {
  agent ( label 'master' )
 environment {
      DOCKERHUB_CREDENTIALS=credentials('dockerhub-ilgar')
}
  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/ilgar1989/jenkins-dockerhub.git'
      }
    }

    stage('Build') {
       steps {
          sh 'docker build -t ilgar:latest .'
          }
          }
     stage ('Login') {
     steps {
         sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
           }
      stage ('ImageTag') {
          steps {
              sh 'docker tag ilgar:latest ilgar236/docker:version2'
         }
       }
       
       stage('Push')  {
          steps {
             sh 'docker push docker push ilgar236/docker:version2'
             }
          }
       }
       
        post {
          always {
            sh 'docker logout'
          }
        }
     }
